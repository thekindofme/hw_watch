!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title= @browser_title || 'Lankan Hardware Watch'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body
    #container
      #header
        %h1 Lankan Hardware Watch
        %h2 Automated upto date price list generation for your latest wears and much more!
      #content
        -if flash.count > 0
          #flash
            - flash.each do |name, msg|
              -#%div[name, :flash_]
              %div{:id=> "flash_#{name}"}
                %p=msg
        #other
          = yield
      #sidebar
        -if user_or_admin_logged_in?
          %list
            %li Logged in as #{current_user_or_admin.email}
        =render :partial => "layouts/navigation", :locals => {:product => @product}
      #footer
        %hr
        %p Lankan Hardware Watch @2010
