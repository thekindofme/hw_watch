%title
  Editing My Info

-form_for @user, :url => user_path do |f|
  -field_set_tag 'Update my email' do
    %p= f.text_field :email
    = error_message_on @user, :email
    %p.submit= f.submit 'Update email'

-form_for @user, :url => user_path do |f2|
  -field_set_tag 'Update my password' do
    %p
      = f2.label :old_password, 'Your actual password, please'
      %br
      = f2.password_field :old_password
    = error_message_on @user, :old_password
    %p
      = f2.label :password, 'What password do you want?'
      %br
      = f2.password_field :password
    = error_message_on @user, :password
    %p
      = f2.label :password_confirmation, 'Confirm the new password'
      %br
      = f2.password_field :password_confirmation
    = error_message_on @user, :password_confirmation
    %p.submit= f2.submit 'Update password'

= link_to "Cancel my account", user_path, :method => :delete, :confirm => "Are you sure?"
